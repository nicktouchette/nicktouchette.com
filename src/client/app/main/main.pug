#landing
  img.monogram.center-both(src='./assets/images/monogram.png')
  img.vignette(src='./assets/images/vignette.png')
  img.landing-text.center-both(src='./assets/images/landing-text.png')
  .more.center(class='bounce' ng-click='vm.scrollTo("#stack")')
    span Scroll
    img(src='./assets/images/landing-more.png')
#stack
  img.header.center(src='./assets/images/stack-header.png')
  img.brands.center(src='./assets/images/stack-brands.png')
#solution
  img.header.center(src='./assets/images/solution-header.png')
  .points.center
    img.point(src='./assets/images/solution1.png')
    img.point(src='./assets/images/solution2.png')
    img.point(src='./assets/images/solution3.png')
    img.point(src='./assets/images/solution4.png')
    img.point(src='./assets/images/solution5.png')
    img.point(src='./assets/images/solution6.png')
#contact
  img.header.center(src='./assets/images/contact-header.png')
  form.submit-form.center(ng-submit="vm.submit()")
    span name
    input(ng-disabled='vm.submitSuccessful' type='text' name='name' ng-model='vm.contact.name')
    span company
    input(ng-disabled='vm.submitSuccessful' type='text' name='company' ng-model='vm.contact.company')
    span email
    input(ng-disabled='vm.submitSuccessful' type='text' name='email' ng-model='vm.contact.email')
    span message
    textarea(ng-disabled='vm.submitSuccessful' name='message' rows='3' ng-model='vm.contact.message')
    input(ng-disabled='vm.submitSuccessful' type='submit' value='{{vm.submitSuccessful ? "Message Sent Successfully!": "Send Message"}}')
    img.required(src='./assets/images/contact-required.png')
#footer
  img.background.center(src='./assets/images/footer-text.png')
  .sites.center
    a(href='mailto:touchette@gmail.com')
      img(src='./assets/images/footer-mail.png')
    a(href='http://www.github.com/nicktouchette')
      img(src='./assets/images/footer-github.png')
    a(href='http://www.linkedin.com/in/nicktouchette/')
      img(src='./assets/images/footer-linkedin.png')
